# YouTube Analysis Application Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(name)s] %(levelname)s: %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_DEFAULT_MODEL=gpt-5-mini
LLM_DEFAULT_TEMPERATURE=0.2
LLM_DEFAULT_MAX_TOKENS=0
LLM_DEFAULT_TIMEOUT=60

# Available models (comma-separated)
LLM_AVAILABLE_MODELS=gpt-5,gpt-5-mini,gpt-4.1-mini,gpt-4.1,gemini-2.5-flash-preview-04-17,gemini-2.5-pro-preview-05-06


# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_EXPIRY_DAYS=7
CACHE_MAX_SIZE_MB=1000
ENABLE_CACHE=true
CACHE_AUTO_CLEANUP=true
# CACHE_DIR=./transcript_cache
# ANALYSIS_CACHE_DIR=./analysis_cache

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
HTTP_TIMEOUT_TOTAL=30
HTTP_TIMEOUT_CONNECT=10
HTTP_KEEPALIVE_TIMEOUT=30
VIDEO_DOWNLOAD_TIMEOUT=300
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# USER AND AUTH CONFIGURATION
# =============================================================================
MAX_GUEST_ANALYSES=1
ENABLE_AUTH=true
SESSION_TIMEOUT_HOURS=24

# Supabase settings (required if ENABLE_AUTH=true)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# =============================================================================
# API KEYS
# =============================================================================
# YouTube API (required if ENABLE_YOUTUBE_API=true)
YOUTUBE_API_KEY=your_youtube_api_key_here
ENABLE_YOUTUBE_API=true

# LLM API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Web search API
TAVILY_API_KEY=your_tavily_api_key_here

# Cost calculation API (for dynamic LLM cost estimation)
# Get your API key from: https://glama.ai/settings/api-keys
GLAMA_API_KEY=your_glama_api_key_here
ENABLE_DYNAMIC_COSTS=true

# =============================================================================
# VIDEO DOWNLOAD / PIPED CONFIGURATION
# =============================================================================
# Optional: Override Piped instance for audio fallback when SSL is disabled
# PIPED_BASE_URL=https://piped.video

# =============================================================================
# YT-DLP COOKIES & HEADERS (use when YouTube requires login / bot check)
# =============================================================================
# Provide cookies to yt-dlp to bypass "Sign in to confirm youâ€™re not a bot"
# One of the following must be set (in precedence order):
# - YTDLP_COOKIES_FILE: absolute path to a Netscape cookies.txt file
# - YTDLP_COOKIES: raw Netscape cookies.txt content
# - YTDLP_COOKIES_BASE64: base64-encoded Netscape cookies.txt content
# Optionally set headers to improve success rate in cloud environments
# YTDLP_ACCEPT_LANGUAGE=en-US,en;q=0.9
# YTDLP_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0.0.0 Safari/537.36
# If you use proxies with yt-dlp, set one of:
# YTDLP_PROXY=http://user:pass@host:port
# ROTATING_PROXIES=http://user:pass@host1:port,http://user:pass@host2:port  # a comma-separated list; one will be chosen per request

# =============================================================================
# YOUTUBE TRANSCRIPT API CONFIGURATION
# =============================================================================
# SSL and network configuration for YouTube requests (useful in Docker/cloud environments)
# YOUTUBE_ANALYSIS_DISABLE_SSL_VERIFY=false
# YOUTUBE_HTTP_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
# YOUTUBE_HTTP_ACCEPT_LANGUAGE=en-US,en;q=0.9

# Proxy configuration for bypassing YouTube IP blocks (requires youtube-transcript-api v1.0+)
# YOUTUBE_PROXY_HTTP=http://user:pass@proxy:port
# YOUTUBE_PROXY_HTTPS=https://user:pass@proxy:port
# WEBSHARE_PROXY_USERNAME=your_webshare_username
# WEBSHARE_PROXY_PASSWORD=your_webshare_password

# Notes:
# - When both YTDLP_PROXY/ROTATING_PROXIES and YOUTUBE_PROXY_* are set, yt-dlp will use YTDLP_PROXY/ROTATING_PROXIES,
#   while direct requests (YouTubeTranscriptApi, Piped, oEmbed) use YOUTUBE_PROXY_*.

# =============================================================================
# UI CONFIGURATION
# =============================================================================
UI_DEFAULT_USE_CACHE=true
UI_DEFAULT_ANALYSIS_TYPES=Summary & Classification
UI_TEMPERATURE_MIN=0.0
UI_TEMPERATURE_MAX=1.0
UI_TEMPERATURE_STEP=0.1
UI_PAGE_TITLE=Skimr Summarizer
UI_PAGE_ICON=:material/movie:
UI_LAYOUT=wide
UI_SIDEBAR_STATE=expanded

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================
CHAT_MAX_HISTORY=50
CHAT_ENABLE_STREAMING=true

# Custom chat prompt template (optional)
# CHAT_PROMPT_TEMPLATE=Your custom chat prompt template here...

# Custom welcome message template (optional)
# CHAT_WELCOME_TEMPLATE=Your custom welcome message here...

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
ANALYSIS_AVAILABLE_TYPES=Summary & Classification,Action Plan,Blog Post,LinkedIn Post,X Tweet
ANALYSIS_ENABLE_CONCURRENT=true
ANALYSIS_MAX_CONCURRENT_TASKS=3
ANALYSIS_ENABLE_PROGRESS=true 